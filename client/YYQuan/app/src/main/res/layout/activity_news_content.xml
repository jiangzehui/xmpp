<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/title">

        <LinearLayout
            android:id="@+id/news_content_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"


            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/web_bar_back_press" />

        </LinearLayout>

        <TextView

            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="猿友圈"
            android:textSize="18dp"
            android:textColor="@android:color/white"/>

        <LinearLayout
            android:id="@+id/news_content_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@mipmap/rss_bottom_tab_share" />

        </LinearLayout>


    </RelativeLayout>




    <android.support.v4.view.ViewPager
        android:id="@+id/news_content_vPager"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1.0"

        android:flipInterval="30"
        android:persistentDrawingCache="animation" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#999999" />


    <LinearLayout

        android:id="@+id/news_content_layout_enterpinglun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#18f0e6e6"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/news_content_editText_pinglun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="4"

                android:background="@drawable/shape_edittext"
                android:hint="我也说两句"
                android:padding="8dp"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/news_content_text_enterpinglun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"

                android:background="@drawable/shape_edittext"
                android:drawableRight="@mipmap/liq"
                android:gravity="center"
                android:padding="8dp"
                android:text="发送 "
                android:textSize="16dp" />

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/news_content_layout_pinglun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="5dp"

            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/news_content_text_showpinglun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"


                android:layout_gravity="center"
                android:background="@drawable/shape_edittext"
                android:drawableRight="@mipmap/comment_lajiao2_icon"
                android:padding="8dp"
                android:text=""
                android:textSize="16dp" />


        </RelativeLayout>


    </LinearLayout>


</LinearLayout>
